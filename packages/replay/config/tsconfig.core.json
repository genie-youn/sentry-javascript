{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "..",
    "rootDir": "..",
    "strictNullChecks": true,
    "outDir": "./build/npm/dist"
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../src/**/*.test.ts", "node_modules"]
}
