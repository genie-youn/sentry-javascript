{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    },
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["node", "jest"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "strictNullChecks": true,
    "outDir": "./build/npm/dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
